<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>




    <!-- Custom Style for PreferenceFragmentCompat -->


    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:textColorPrimary">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
    </style>

 








</resources>
